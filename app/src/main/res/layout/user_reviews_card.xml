<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginRight="16dp"
    android:elevation="4dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_rater"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:tint="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/text_cardview_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/image_rater"
            android:text="Agent 007 "
            android:textColor="#b9000000"
            android:textSize="21sp" />

        <RatingBar
            android:id="@+id/ratingbar_cardview_user_rating"
            style="@android:style/Widget.Material.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/image_rater"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="3.5"
            android:stepSize="0.1" />

        <TextView
            android:id="@+id/text_cardview_user_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ratingbar_cardview_user_rating"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:maxLines="4"
            android:text="This is the user review lakdjflkjdsflkjdlfj\nThis is the user review lakdjflkjdsflkjdlfj"
            android:textColor="@android:color/darker_gray" />

    </RelativeLayout>

</android.support.v7.widget.CardView>